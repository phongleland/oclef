<div class="salutation" style="font-family: sans-serif; color: #2f3031; margin-bottom: 18px; font-weight: normal; font-size: 24px;">
  <%= yield :salutation %>
</div>
<div class="lead" style="font-family: sans-serif; color: #ea7600; margin-bottom: 8px; font-weight: normal; font-size: 18px;">
  <%= yield :lead %>
</div>
<div class="text" style="font-family: sans-serif; color: #171819; margin-bottom: 8px; font-weight: normal; font-size: 14px;">
  <%= yield :message %>
</div>
<div class="callout" style="background-color: #e5f5f8; font-size: 14px; line-height: 20px; font-family: sans-serif; color: #171819; padding-top: 8px; padding-right: 12px; padding-bottom: 8px; padding-left: 12px; border-radius: 3px;">
  <%= yield :callout %>
</div>