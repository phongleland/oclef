    <%= f.label :song_id %><br>
    <%= f.collection_select :song_id, Song.all, :id, :title %>
  </div>
  <div class="field">
    <%= f.label :tempo %><br>
    <%= f.number_field :tempo %>
  </div>
  <div class="field">
    <%= f.label :is_recording_required %><br>
    <%= f.check_box :is_recording_required %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
