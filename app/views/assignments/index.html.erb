<p id="notice"><%= notice %></p>

<h1>Listing Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Student</th>
      <th>Song</th>
      <th>Tempo</th>
      <th>Is recording required</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.teacher %></td>
        <td><%= assignment.student %></td>
        <td><%= assignment.song %></td>
        <td><%= assignment.tempo %></td>
        <td><%= assignment.is_recording_required %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

